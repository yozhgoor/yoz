  {job_name}:
    runs-on: {platform}
    steps:
      - name: Checkout source
        uses: actions/checkout@v2
      - name: {build_title}
        uses: actions-rs/cargo@v1
        with:
          command: build
          args: --release --target={target}
      - uses: actions/upload-artifact@v2
        with:
          name: {build_name}
          path: |
            target/{target}/release/{project_name}

